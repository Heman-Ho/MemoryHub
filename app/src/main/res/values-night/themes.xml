<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemoryHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/dark</item></style>

    <style name="TextColor"><item name="android:textColor">@color/white</item></style>
    <style name="LogoChange"><item name="android:src">@drawable/memhubdark</item></style>
    <style name="BannerChange"><item name="android:src">@drawable/darkbanner</item></style>
    <style name="SettingsChange"><item name="android:src">@drawable/darksettings</item></style>
    <style name="LogoutChange"><item name="android:src">@drawable/darklogout</item></style>
    <style name="PuzzGameChange"><item name="android:src">@drawable/puzzgamedark</item></style>
    <style name="MemGameChange"><item name="android:src">@drawable/memmatchdark</item></style>
    <style name="textBanner"><item name="android:src">@drawable/textbanner</item></style>
    <style name="matchBackground"><item name ="android:color">@color/dark</item></style>

</resources>